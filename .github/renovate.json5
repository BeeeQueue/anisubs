{
  extends: [
    "config:js-app",
    "helpers:disableTypesNodeMajor",
  ],
  prConcurrentLimit: 5,
  schedule: ["before 2am"],
  packageRules: [
    {
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
    },
    {
      groupName: "linting",
      extends: ["group:linters"],
      matchPackagePatterns: ["eslint"],
    },
    {
      groupName: "testing",
      extends: ["packages:jsUnitTest"],
      matchPackagePatterns: ["^@testing-library"],
    },
    {
      groupName: "babel",
      matchPackagePatterns: ["babel"],
    },
  ],
}
