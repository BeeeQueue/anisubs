{
  "name": "@anisubs/root",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "lerna run --stream --exclude-dependents build",
    "dev": "lerna run dev --parallel",
    "lint": "yarn lint:nocache --cache --cache-location ./node_modules/.cache/eslint",
    "lint:nocache": "eslint apps/*/src/**/*.{ts,vue}",
    "start:manager": "cd apps/manager && yarn start",
    "start:worker": "cd apps/worker && yarn start",
    "test": "cross-env NODE_ENV=test jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "resolutions": {
    "@types/node": "14.14.19",
    "typescript": "4.1.3",
    "vue-loader": "16.1.2"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "2.0.0",
    "@types/dotenv-flow": "3.1.0",
    "@types/faker": "5.1.5",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.19",
    "@types/prettier": "2.1.6",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "cross-env": "7.0.3",
    "dotenv-flow": "3.2.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-vue": "7.4.0",
    "faker": "5.1.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3",
    "utility-types": "3.10.0"
  }
}
